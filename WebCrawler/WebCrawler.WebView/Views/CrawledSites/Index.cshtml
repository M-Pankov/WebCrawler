@using WebCrawler.WebView.Logic.Helpers;
@using WebCrawler.WebView.Logic.ViewModels;
@model PagedList<CrawledSiteViewModel>

<div class="container">
    <div class="row">
        @using (Html.BeginForm("CrawlSite", "CrawledSites"))
        {
            <table>
                <tr>
                    <td>Enter a website: </td>
                    <td> <input type="text" name="input" /></td>
                    <td> <input class="btn btn-primary" type="submit" value="Test" /></td>
                </tr>
            </table>
            <br />

        }
    </div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Test Results</h2>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Url
                </th>
                <th>
                    Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Url
                    </td>
                    <td width="30%">@obj.CrawlDate</td>
                    <td width="20%">
                        <a asp-controller="CrawlResults" asp-action="SiteCrawlResult" asp-route-Id="@obj.Id" class="btn btn-primary mx-1">Show Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        @if (Model.HasPreviousPage)
        {
            <a asp-controller="CrawledSites" asp-action="Index"
           asp-route-pageNumber="@(Model.PageNumber - 1)" class="btn btn-primary"> Previous </a>

        }
        @if (!Model.HasPreviousPage)
        {
            <button class="btn btn-dark"> Previous </button>
        }
        @if (Model.HasNextPage)
        {
            <a asp-controller="CrawledSites" asp-action="Index"
           asp-route-pageNumber="@(Model.PageNumber + 1)" class="btn btn-primary"> Next </a>
        }
        @if (!Model.HasNextPage)
        {
            <button class="btn btn-dark"> Next </button>
        }
    </div>
</div>
